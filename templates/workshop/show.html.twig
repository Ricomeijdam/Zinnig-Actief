{% extends 'base.html.twig' %}

{% block title %}Workshop{% endblock %}

{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ workshop.foto }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ workshop.naam }}</td>
            </tr>
            <tr>
                <th>Beschrijving</th>
                <td>{{ workshop.beschrijving }}</td>
            </tr>
            <tr>
                <th>Prijs</th>
                <td>{{ workshop.prijs }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ workshop.min }}</td>
            </tr>
            <tr>
                <th>Max</th>
                <td>{{ workshop.max }}</td>
            </tr>
            <tr>
                <th>Begin</th>
                <td>{{ workshop.begin ? workshop.begin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Eind</th>
                <td>{{ workshop.eind ? workshop.eind|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('workshop_index') }}">back to list</a>

    <a href="{{ path('workshop_edit', {'id': workshop.id}) }}">edit</a>

    {{ include('workshop/_delete_form.html.twig') }}
{% endblock %}
